<?xml version="1.0"?>
<block>
  <name>ccsds_modulator</name>
  <key>ccsds_ccsds_modulator</key>
  <category>[ccsds]</category>
  <import>import ccsds</import>
  <make>ccsds.ccsds_modulator($constellation,$pcm)</make>

  <param>
    <name>Constellation</name>
    <key>constellation</key>
    <type>raw</type>
  </param>
  
  <param>
  	<name>Pulse Code Modulation Type</name>
  	<key>pcm</key>
  	<type>raw</type>
  	<option>
		  <name>NRZ-L</name>
		  <key>0</key>
	  </option>
	  <option>
		  <name>NRZ-M</name>
		  <key>1</key>
	  </option>
	  <option>
		  <name>NRZ-S</name>
		  <key>2</key>
	  </option>
	  	  <option>
		  <name>Bi-Phase L</name>
		  <key>3</key>
	  </option>
	  <option>
		  <name>Uncoded</name>
		  <key>4</key>
	  </option>
  </param>

  <sink>
    <name>PDU_in</name>
    <type>message</type>
  </sink>
  
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
